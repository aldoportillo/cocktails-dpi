<h2><%= @name %></h2>

<div class="cocktail-content">
  <img src=<%= @image %> />
  <div class="cocktail-info">
    <span><h4>Instructions: </h4><%= @instructions %></span>
    <span><h4>Glass: </h4><%= @glass %></span>
    <span>
      <h4>Ingredients</h4>
      <table>
        <tbody>
          <% @ingredientArr.each{ |ingredient| %>
            <tr>
              <td><%=ingredient[0]%></td>
              <td><%=ingredient[1]%></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </span>
  </div>
</div>
